#include <stdio.h>

int main() {
    int rows, i, j, num;

    printf("Enter number of rows for Reverse Floyd's Triangle: ");
    scanf("%d", &rows);

    num = rows * (rows + 1) / 2;

    for (i = rows; i >= 1; i--) {
        for (j = 1; j <= i; j++) { 
            printf("%d ", num);
            num--;
        }
        printf("\n");
    }

    return 0;
}
